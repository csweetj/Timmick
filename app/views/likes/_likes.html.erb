<div id="like-link-<%= post.id %>">
  <span class="text-gray-600 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-xl pr-3 py-1 border-r-2 border-gray-300">
    <% if current_user.likes.find_by(post_id: post.id) %>
      <%= link_to unlike_path(post.id), method: :delete, remote: true, class: "text-pink-500" do %>
        <i class="fas fa-heart" id="<%= post.id %>"></i>
      <% end %>
      <span class="px-1"><%= post.likes.count %></span>
    <% else %>
      <%= link_to like_path(post.id), method: :post, remote: true, class: "text-gray-500" do %>
        <i class="far fa-heart" id="<%= post.id %>"></i>
      <% end %>
      <span class="px-1"><%= post.likes.count %></span>
    <% end %>
  </span>
</div>