<div id="comment-count">
  <span class="inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none pr-3 py-1">
    <% if user_signed_in? %>
      <% if Comment.find_by(user_id: current_user.id, post_id: post.id)%>
        <span class="text-green-400">
          <i class="fas fa-comment"></i>
        </span>
      <% else %>
        <span class="text-gray-500 hover:text-green-400">
          <i class="far fa-comment"></i>
        </span>
      <% end %>
    <% else %>
      <i class="far fa-comment"></i>
    <% end %>
    <% if post.comments.length > 0 %>
      <span class="px-1"><%= post.comments.length %></span>
    <% end %>
  </span>
</div>
