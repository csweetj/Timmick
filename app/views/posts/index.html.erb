<div class="max-w-6xl m-auto">
  <div class="flex items-center justify-between pb-4 mb-4 border-b">
    <h1 class="text-xl font-bold mb-0 uppercase text-gray-500">Posts</h1>
    <%= link_to "新規投稿", new_post_path, class: "btn btn-default" if user_signed_in? %>
  </div>

  <% @posts.each do |post| %>
  <article class="border rounded-lg lg:w-1/3 w-full">
    <%= link_to post do %>
      <div class ="flex">
        <%= image_tag post.feature_images[0].variant(resize: '250x300') %>
      </div>
    <% end %>
  

      <div class="p-6">
        <h1 class="text-2xl font-bold"><%= link_to post.title, post %></h1>

        <div class="leading-normal text-lg">
          <%= post.body %>
        </div>

        <% if user_signed_in? && current_user.id == post.user_id %>
          <div class="my-4">
            <%= link_to '編集', edit_post_path(post), class: "btn btn-default" %>
            <%= link_to '削除', post, method: :delete, data: { confirm: 'ほんとに削除しますか？' }, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </article>
    <% end %>
  </div>
</div>