<div class="max-w-6xl m-auto">
  <div class="flex items-center justify-between py-4 my-4 border-b">
    <% if params[:tag_list] %>
      <h1 class="text-xl font-bold mb-0 text-gray-500"><%= "##{@tag}についての投稿" %></h1>
    <% else %>
      <h1 class="text-xl font-bold mb-0 text-gray-500">投稿一覧</h1>
    <% end %>
    <%= link_to "新規投稿", new_post_path, class: "btn btn-default" if user_signed_in? %>
  </div>

  <div class="container px-5 py-1 mx-auto">
    <div class="mb-8">
      <i class="fas fa-tags"></i>
      <h2 class="inline mr-1">Top 20</h2>
      <% @tags.each do |tag| %>
        <%= link_to posts_path(tag_list: tag.name) do %>
          <span class="inline-block py-1 px-2 border rounded-full text-indigo-500 text-xs font-medium tracking-widest hover:bg-indigo-500 hover:text-white"><%= "#{tag.name}(#{tag.taggings_count})" %></span>
        <% end %>
      <% end %>
      <%= link_to "全てのタグ", tags_path, class: "inline-block py-1 px-2 border rounded-full text-indigo-500 text-xs font-medium tracking-widest hover:bg-indigo-500 hover:text-white" %>
    </div>
    
    <div class="flex flex-wrap -m-5">
      <% @posts.each do |post| %>
        <div class="p-2 md:w-1/3">
          <div class="h-full overflow-hidden rounded border">
            <a class="inline-flex items-center px-1 py-1 mx-auto">
              <img alt="blog" src="https://dummyimage.com/104x104" class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center">
              <span class="title-font font-medium px-2"><%= post.user.nickname %></span>
            </a>
            <span class="float-right text-sm px-2 py-4 mx-auto"><%= post.created_at.strftime('%Y/%m/%d')%></span>

            <%= link_to post do %>    
              <% if post.feature_images.present? %>
                <%= image_tag post.feature_images[0], class:"lg:h-48 md:h-36 w-full object-cover object-center", alt:"blog"%>
              <% else %>
                <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="https://dummyimage.com/720x400" alt="blog">
              <% end %>
            <% end %>

        <div class="pt-3 p-6">
          <%= render 'tags/tag_list', tag_list: post.tag_list %>
          <%= link_to post do %>
            <h1 class="title-font text-lg font-bold text-gray-900 mt-1 mb-3 whitespace-pre-wrap"><%= link_to post.title, post %></h1>
            <div class="overflow-auto h-20">
              <p class="leading-relaxed mb-3 whitespace-pre-wrap font-medium"><%= post.body %></p>
            </div>
          <% end %>
          <div class="flex items-center flex-wrap text-xl">
            <%= render 'likes/like', post: post %>
            <%= link_to post do %>
              <%= render 'comments/comment', post: post %>
            <% end %>
            <% if user_signed_in? && current_user.id == post.user_id %>
              <%= link_to edit_post_path(post), class: "mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none pr-3 py-1 hover:text-green-400", title:"編集" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to post, method: :delete, data: { confirm: 'ほんとに削除しますか？' }, class: "inline-flex items-center leading-none hover:text-red-600", title:"削除" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </div>
        </div>
  </div>
</div>
        <% end %>