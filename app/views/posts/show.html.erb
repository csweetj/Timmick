<div class="max-w-6xl m-auto">
  <div class="container mx-auto border rounded-lg p-4 ">
    <a class="inline-flex items-center">
      <img alt="blog" src="https://dummyimage.com/104x104" class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center">
      <span class="title-font font-medium px-2"><%= @post.user.nickname %></span>
    </a>
    <span class="float-right text-sm"><%= @post.created_at.strftime('%Y/%m/%d')%></span>
    <%= link_to @post do %>
    <div class="flex w-1/4 lg:h-48 md:h-36 object-cover object-center">
      <% @post.feature_images.each do |image| %>
        <%= image_tag image, class:"p-1" %>
      <% end %>
    </div>
    <% end %>


    <div class="px-4 py-4">
      <h1 class="text-lg font-bold py-4"><%= @post.title %></h1>
      <p class="leading-normal whitespace-pre-wrap py-4"><%= @post.body %></p>
    </div>
    <div class="flex items-center flex-wrap ">
      <%= render 'likes/likes', post: @post %>
      <span class="text-gray-600 inline-flex items-center leading-none text-base">
          <i class="far fa-comment"></i>
      </span>
      </div>

    <div class="">
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <%= link_to '編集', edit_post_path(@post), class: "btn btn-default" %>
        <%= link_to '削除', @post, method: :delete, data: { confirm: 'ほんとに削除しますか？' }, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>