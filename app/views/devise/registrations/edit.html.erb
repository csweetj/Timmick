<% content_for :devise_form do %>
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :ニックネーム, class:"relative" %>
        <span class="absolute text-red-600">*</span>
      <%= f.text_field :nickname, class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :メールアドレス, class:"relative" %>
        <span class="absolute text-red-600">*</span>
      <%= f.email_field :email, autocomplete: "email", class:"input" %>
    </div>

    <div class="mb-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :パスワード（最低６文字）, class:"relative" %>
        <span class="absolute text-red-600">*</span>
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
      <p class="pt-1 text-sm italic text-grey-dark">(変更がなければ空欄にしてください) </p>

    </div>

    <div class="mb-6">
      <%= f.label :パスワード（確認）, class: "relative" %>
        <span class="absolute text-red-600">*</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.label :現在のパスワード, class: "relative" %>
        <span class="absolute text-red-600">*</span>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      <p class="pt-2 text-sm italic text-grey-dark">(変更するために現在のパスワードを入力してください)</p>
    </div>


    <div class="mb-6">
    <%= f.label :職業, class:"relative" %>
      <span class="absolute text-red-600">*</span>
    <%= f.collection_select(:career_id, Career.all, :id, :name, {}, {class:""}) %>
    </div>
    
    <div class='mb-6'>
      <%= f.label :誕生日, class:"relative" %>
      <div class="flex">
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 1),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    
    <div class="mb-6">
    <%= f.label :性別, class:"relative" %>
      <span class="absolute text-red-600">*</span>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"block"}) %>
    </div>

    <div class="mb-6">
      <%= f.submit "更新", class: "btn btn-default" %>
    </div>
  <% end %>

  <hr class="mt-6 mb-3 border" />
  <div class="flex items-center justify-between">
    <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "ほんとに削除しますか？" }, method: :delete, class: "btn btn-red" %>
  </div>

<% end %>

<%= render 'devise/shared/form_wrap' %>
