<% content_for :devise_form do %>
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-group">
      <%= f.label :メールアドレス, class:"label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.label :パスワード, class:"label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <div class="mb-6 input-checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :次から入力を省略, class:"label" %>
      <% end -%>
    </div>

    <div class="input-group">
      <%= f.submit "ログイン", class: "btn btn-default" %>
    </div>

  <% end %>

  <hr class="mt-6 border" />

  <%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_wrap" %>
