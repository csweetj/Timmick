<div class="container px-5 py-24 mx-auto flex flex-wrap flex-col">
  <!-- タブメニューー -->
  <ul class="flex mb-0 list-none flex-wrap pt-3 pb-4 flex-row cursor-pointer">
    <li class="-mb-px mr-2 last:mr-0 flex-auto text-center">
      <a class="text-s font-bold uppercase px-5 py-3 shadow-lg rounded block leading-normal text-green-600 bg-white hover:bg-green-600 hover:text-white" id="BoxBreathingMenu">ボックス呼吸法</a>
    </li>
    <li class="-mb-px mr-2 last:mr-0 flex-auto text-center">
      <a class="text-s font-bold uppercase px-5 py-3 shadow-lg rounded block leading-normal text-green-400 bg-white hover:bg-green-400 hover:text-white" id="RemSleepMenu">レム仮眠・昼寝</a>
    </li>
  </ul>
  
  <!-- ボックス呼吸法タイマー -->
  <section class="bg-green-600 border rounded hidden" id="BoxBreathing">
    <!-- タイマー -->
    <div class="m-auto w-1/2 h-4" id="BoxBreathingBar"></div>
    <div class="max-w-2xl text-6xl text-center m-auto p-10">
      <div id="BoxBreathingTimer">00:04</div>
      <div id="BoxBreathingStart" class="btn btn-default">Start</div>
      <div id="BoxBreathingReset" class="btn btn-default hidden"></div>
    </div>   

    <div class="flex item-center justify-center">
      <%= form_with model: @timer, local: true do |form| %>
        <div>
          <%= form.text_field :timer_name, value: "リラックス", readonly: true %>
          <%= form.number_field :timer_count, min: 0, max: 600, readonly: true, id: "BoxBreathingTime" %>
          <span class="cursor-pointer" id="BoxBreathingEdit" title="編集する"><i class="fas fa-edit"></i></span>
        </div>
        <div class="flex text-center justify-center p-10">
          <%= form.submit disabled: true, id: "BoxBreathingSave" %>
        </div>
      <% end %>
    </div>
    <!-- モーダルウィンドウ -->
    <div class="text-center m-auto p-10">
      <div id="BoxBreathingOpen"></div>
      <div id="BoxBreathingMask" class="fixed bg-gray-500 bg-opacity-75 inset-0 hidden z-0"></div>
      <section id="BoxBreathingModal" class="bg-white w-1/4 absolute border rounded-lg p-10 inset-x-0 top-1/4 m-auto hidden">
        <p class=""></p>
        <p id="BoxBreathingRest" class="btn btn-default mt-4"></p>
        <p id="BoxBreathingKeep" class="btn btn-default mt-4"></p>
      </section>   
    </div> 
  </section>
  
  <!-- レム仮眠・昼寝タイマー -->
  <section class="bg-green-400 border rounded hidden" id="RemSleep">
    <!-- タイマー -->
    <div class="m-auto w-1/2 h-4" id="RemSleepBar"></div>
    <div class="max-w-2xl text-6xl text-center m-auto p-10 ">
      <div id="RemSleepTimer">15:00</div>
      <div id="RemSleepStart" class="btn btn-default">Start</div>
      <div id="RemSleepReset" class="btn btn-default hidden"></div>
    </div>

    <div class="flex item-center justify-center">
      <%= form_with model: @timer, local: true do |form| %>
        <div>
          <%= form.text_field :timer_name, value: "リラックス", readonly: true %>
          <%= form.number_field :timer_count, min: 0, max: 600, readonly: true, id: "RemSleepTime" %>
          <span class="cursor-pointer" id="RemSleepEdit" title="編集する"><i class="fas fa-edit"></i></span>
        </div>
        <div class="flex text-center justify-center p-10">
          <%= form.submit disabled: true, id: "RemSleepSave" %>
        </div>
      <% end %>
    </div>
    <!-- モーダルウィンドウ -->
    <div class="text-center m-auto p-10">
      <div id="RemSleepOpen"></div>
      <div id="RemSleepMask" class="fixed bg-gray-500 bg-opacity-75 inset-0 hidden z-0"></div>
      <section id="RemSleepModal" class="bg-white w-1/4 absolute border rounded-lg p-10 inset-x-0 top-1/4 m-auto hidden">
        <p class="">おはようございます</p>
        <p id="RemSleepRest" class="btn btn-default mt-4">元気になった！！</p>
        <p id="RemSleepKeep" class="btn btn-default mt-4">あと少し寝る...</p>
      </section>   
    </div>     
  </section>
</div>