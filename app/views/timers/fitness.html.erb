<div class="container px-5 py-24 mx-auto flex flex-wrap flex-col">
  <!-- タブメニューー -->
  <ul class="flex mb-0 list-none flex-wrap pt-3 pb-4 flex-row cursor-pointer">
    <li class="-mb-px mr-2 last:mr-0 flex-auto text-center">
      <a class="text-s font-bold uppercase px-5 py-3 shadow-lg rounded block leading-normal text-red-500 bg-white hover:bg-red-500 hover:text-white" id="HiitMenu">HIITトレーニング</a>
    </li>
    <li class="-mb-px mr-2 last:mr-0 flex-auto text-center">
      <a class="text-s font-bold uppercase px-5 py-3 shadow-lg rounded block leading-normal text-yellow-500 bg-white hover:bg-yellow-500 hover:text-white" id="StretchMenu">ストレッチ・ヨガ</a>
    </li>
  </ul>
  
  <!-- HIITタイマー -->
  <section class="bg-red-500 border rounded hidden h-auto" id="Hiit">
    <!-- タイマー -->
    <div class="m-auto w-1/2 h-4" id="HiitBar"></div>
    <div class="max-w-2xl text-6xl text-center m-auto p-10">
      <div id="HiitTimer">00:30</div>
      <div id="HiitStart" class="btn btn-default">Start</div>
      <div id="HiitReset" class="btn btn-default hidden"></div>
    </div>   

    <div class="flex item-center justify-center">
      <%= form_with model: @timer, local: true do |form| %>
        <div class="inline-flex">
          <%= form.text_field :timer_name, value: "フィットネス", readonly: true, class:"input h-8 mr-1" %>
          <div class="relative flex w-full flex-wrap items-stretch mb-3">
            <span class="cursor-pointer z-10 leading-snug font-normal absolute text-center text-gray-400 absolute bg-transparent rounded text-base items-center justify-center py-1 pl-1" id="HiitEdit" title="編集する"><i class="fas fa-edit"></i></span>
            <%= form.number_field :timer_count, min: 0, max: 600, readonly: true, id: "HiitTime", class:"relative rounded text-sm shadow outline-none focus:outline-none focus:shadow-outline w-20 h-8 pl-10" %>
            <p class="text-xl">✖︎セット</p>
          </div>
        </div>
        <div class="flex text-center justify-center p-10">
          <%= form.submit disabled: true, id: "HiitSave", value: "記録する", class: "p-2 rounded" %>
        </div>
      <% end %>
    </div>
    <!-- モーダルウィンドウ -->
    <div class="text-center m-auto p-10">
      <div id="HiitOpen"></div>
      <p id="HiitRest"></p>
      <p id="HiitKeep"></p>
    </div> 
  </section>
  
  <!-- ストレッチタイマー -->
  <section class="bg-yellow-500 border rounded hidden" id="Stretch">
    <!-- タイマー -->
    <div class="m-auto w-1/2 h-4" id="StretchBar"></div>
    <div class="max-w-2xl text-6xl text-center m-auto p-10">
      <div id="StretchTimer">00:20</div>
      <div id="StretchStart" class="btn btn-default">Start</div>
      <div id="StretchReset" class="btn btn-default hidden"></div>
    </div>

    <div class="flex item-center justify-center">
      <%= form_with model: @timer, local: true do |form| %>
        <div class="inline-flex">
          <%= form.text_field :timer_name, value: "フィットネス", readonly: true, class:"input h-8 mr-1" %>
          <div class="relative flex w-full flex-wrap items-stretch mb-3">
            <span class="cursor-pointer z-10 leading-snug font-normal absolute text-center text-gray-400 absolute bg-transparent rounded text-base items-center justify-center py-1 pl-1" id="StretchEdit" title="編集する"><i class="fas fa-edit"></i></span>
            <%= form.number_field :timer_count, min: 0, max: 600, readonly: true, id: "StretchTime", class:"relative rounded text-sm shadow outline-none focus:outline-none focus:shadow-outline w-20 h-8 pl-10" %>
            <p class="text-xl">✖︎セット</p>
          </div>
        </div>
        <div class="flex text-center justify-center p-10">
          <%= form.submit disabled: true, id: "StretchSave", value: "記録する", class: "p-2 rounded" %>
        </div>
      <% end %>
    </div>
    <!-- モーダルウィンドウ -->
    <div class="text-center m-auto p-10">
      <div id="StretchOpen"></div>
      <p id="StretchRest"></p>
      <p id="StretchKeep"></p>
    </div>     
  </section>
</div>