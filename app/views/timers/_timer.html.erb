<div class="max-w-6xl m-auto">
  <!-- タイトル -->
  <div class="flex items-center justify-between pb-4 mb-4 border-b">
    <h1 class="text-xl font-bold mb-0 text-gray-500">これからの予定は？ </h1>
  </div>

  <!-- 予定 -->
  <section class="flex flex-wrap">
    <!-- 勉学 -->
    <div class="p-1 md:w-1/2 sm:w-full">
        <div class="shadow-lg group container rounded-md flex justify-center items-center mx-auto study">
            <div class="w-full image-cover rounded-t-md" >
              <div class="opacity-0 group-hover:opacity-100 text-center my-24">
                <span class="text-white tracking-wider leading-relaxed font-sans text-lg">学習</span> 
                <p class="text-white tracking-wider leading-relaxed font-sans">①ポモドーロ・テクニック</p>
                <p class="text-white tracking-wider leading-relaxed font-sans">②学生生活</p>
                <div class="pt-4">
                  <%= link_to  "Learn more", timers_study_path, class:"rounded-lg p-2 bg-white text-gray-700 font-bold text-lg" %>  
                </div>
              </div>
            </div>
        </div>  
    </div>

    <!-- リラックス -->
    <div class="p-1 md:w-1/2 sm:w-full">
        <div class="shadow-lg group container rounded-md flex justify-center items-center mx-auto relax">
            <div class="w-full image-cover rounded-t-md" >
              <div class="opacity-0 group-hover:opacity-100 text-center my-24">
                <span class="text-white tracking-wider leading-relaxed font-sans">リラックス</span>
                <p class="text-white tracking-wider leading-relaxed font-sans">①ボックス呼吸法</p>
                <p class="text-white tracking-wider leading-relaxed font-sans">②レム仮眠・昼寝</p>
                <div class="pt-4">
                  <%= link_to  "Learn more", timers_relax_path, class:"rounded-lg p-2 bg-white text-gray-700 font-bold text-lg" %>
                </div>
              </div>
          </div>
        </div>  
    </div>

    <!-- フィットネス -->
    <div class="p-1 md:w-1/2 sm:w-full">
        <div class="shadow-lg group container rounded-md flex justify-center items-center mx-auto fitness">
            <div  class="w-full image-cover rounded-t-md" >
              <div class="opacity-0 group-hover:opacity-100 text-center my-24">
                <span class="text-white tracking-wider leading-relaxed font-sans">フィットネス</span> 
                <p class="text-white tracking-wider leading-relaxed font-sans">①HIITトレーニング</p>
                <p class="text-white tracking-wider leading-relaxed font-sans">②ストレッチ・ヨガ</p>
                <div class="pt-4">
                  <%= link_to  "Learn more", timers_fitness_path, class:"rounded-lg p-2 bg-white text-gray-700 font-bold text-lg" %>
                </div>
              </div>
          </div>
        </div>  
    </div>

    <!-- 趣味 -->
    <div class="p-1 md:w-1/2 sm:w-full">
        <div class="shadow-lg group container rounded-md flex justify-center items-center mx-auto hobby">
            <div class="w-full image-cover rounded-t-md" >
              <div class="opacity-0 group-hover:opacity-100 text-center my-24">
                <span class="text-white tracking-wider leading-relaxed font-sans">趣味</span> 
                <p class="text-white tracking-wider leading-relaxed font-sans">①ゲーム</p>
                <p class="text-white tracking-wider leading-relaxed font-sans">②趣味</p>
                <div class="pt-4">
                   <%= link_to  "Learn more", timers_hobby_path, class:"rounded-lg p-2 bg-white text-gray-700 font-bold text-lg" %>
                </div>
              </div>
          </div>
        </div>  
    </div>  
  </section>
